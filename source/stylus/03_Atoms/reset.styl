// box-sizing rules
html
	box-sizing border-box

*
*:before
*:after
	box-sizing inherit

// remove default margin
body
h1
h2
h3
h4
p
ul
ol
li
figure
figcaption
blockquote
dl
dd
	margin 0

// set core body defaults
body
	min-height 100vh

	scroll-behavior smooth // @stylint ignore
	text-rendering optimizeSpeed

// link elements that don't have a class get default styles
a:not([class])
	text-decoration-skip-ink auto // @stylint ignore

// make images easier to work with
img
	display block

	height auto
	max-width 100%

// natural flow & rhythm in articles by default
article > * + *
	margin-top 1em

// inherit fonts for inputs & buttons
input
button
textarea
select
	font inherit